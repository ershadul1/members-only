<article class="media box">
  <div class="media-content">

    <%= simple_form_for(@post) do |f|%>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <small>*Create more than 2 posts to get active user status*</small>
          <%= f.input :body, label: "Embarass someone", input_html: { class: "textarea "}, wrapper: false, label_html: { class: "label "}, placeholder: "Compose a new embarrasment...", autofocus: true%>
        </div>
      </div>
      <%= f.button :submit, class: "button is-info"%>
    <%end%>

  </div>
</article>

